<h1>List of posts</h1>

<%if @list_Posts.count!=0%>
	
	<table>
  <tr>
    <th>Post by title:</th>
     <th>Posted on:</th>
   
  </tr>
 
	<% @list_Posts.each do |post| %>
  	<tr>
    	<td><%= post.title %></td>
    	<td><%= post.created_at %></td>
    	<td></td>
    	<td></td>
    	<!-- <td><%= post.content %></td> -->
    	<td><%= link_to 'Show', post %></td>
    	<td><%= link_to 'Edit', edit_post_path(post) %></td>
    	<td><%= link_to 'Destroy',post, :confirm => 'Are you sure?',
                                     	  :method => :delete %></td>
 	</tr>
	<% end %>
	</table>
	<br />
	<%# end %>	
<% else %>
	<p>THERE IS NO POST TO SHOW.</p>
<% end %>

 
<%= link_to 'New post', new_post_path %>
