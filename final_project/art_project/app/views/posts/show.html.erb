<p id="notice"><%= notice %></p>

	<p>
	  <!-- <strong>Title:</strong> -->
	  <h2><%= @post.title %></h2>
	</p>

	<p>
	  <!-- <strong>Image:</strong> -->
	  <img src='<%= @post.image_url(:thumb) %>'>
	</p>

	<p>
	  <strong>Author:</strong>
	  <%= @post.user.first_name+ ' '+ @post.user.last_name%> 
	</p>
	<p>
	  <strong>Created:</strong>
	  <%= @post.created_at%> 
	</p>

	<p>
	  <strong>Content:</strong>
	  <%= @post.content %>
	</p>
	
	<!-- Show on same page the comment added by the public. -->
	
	<%if @post.comments.present?%>
		<h4>Comments:</h4>
		<% @post.comments.each do |comment| %>
		<strong>comment added:</strong><%= time_ago_in_words(comment.created_at) %><spam> ago</spam><br>
 		<strong>Commenter:</strong><spam><%= comment.commenter %><spam><br>
   		<strong>Text:</strong><%= comment.body %><br><br>
  <% end%>
	<% else%>
		<p>There are no comments. Be the first to comment this post.</p>
	<% end %>
   
  
<!--The form_for call here uses an array -->
	
	<h5>Add a comment:</h5>
		<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :Comment %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<!-- Only logged user(artist) and the owner of the post can modify the posts. The admin can't modify it-->
<!-- Admin can delete posts only -->
<% if current_user.present? && current_user.id==@post.user.id %>
	<%= link_to 'Edit', edit_post_path(@post) %>|
<% end %>

<%= link_to 'Back', posts_path %>

