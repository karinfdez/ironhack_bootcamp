<p id="notice"><%= notice %></p>
<p>Events searcher:</p>
<%= form_tag '/events', :method => 'get',class: "navbar-form" do %>
  <div class="input-append">
    <%= text_field_tag :search_event, params[:search_event ], class: "span2", placeholder: "Search by Title" %>
    <%= text_field_tag :search_location, params[:search_location], class: "span2", placeholder: "Search by Location" %>
    <%#= text_field_tag :search_date, params[:search_date], class: "span2", placeholder: "Search by Date" %>
  <select name="drop_date">
    <option value="All dates" selected="selected">Search by date</option>
    <%if current_user.present? && current_user.admin?%>
      <option value="Past events">Past Events</option>
    <% end %>
    <option value="Today">Today</option>
    <option value="Tomorrow">Tomorrow</option>
    <option value="This week">This week</option>
    <option value="This month">This month</option>
</select>


    <button class="btn" type="submit"><i class="icon-search">Search</i></button>
  </div>
<% end %>

<h4>Listing Events</h4>
 <% if @events.present?%>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Location</th>
        <th>Start date</th>
        <!-- <th>Ends date</th> -->
        <th>Image</th>
        <!-- <th>Description</th> -->
        <!-- <th>Organizer name</th> -->
        <!-- <th>Event type</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><a href="/events/<%=event.id%>"><%= event.title%></a></td>
            <td><%= event.location %></td>
            <td><%=event.start_date %></td>
            <!-- <td><%#= event.ends_date %></td> -->
            <!-- Show image resized -->
            <td><img src='<%= event.image_url(:thumb) %>'></td>
          <% if current_user.present? and current_user.admin? %>
             <td> <%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      <% end %>
        </tr>
    </tbody>
  </table>  
    <% else%>
      <p>Sorry, there are no events.</p>
        <!-- Only admin can modify, destroy and create events. -->
    <% end %>

        
<br>

 <% if current_user.present? and current_user.admin? %>
   <%= link_to 'New Event', new_event_path %>
  <% end %>
