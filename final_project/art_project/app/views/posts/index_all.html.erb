

<%= form_tag '/posts', :method => 'get',class: "navbar-form" do %>
	<div class="input-append">
    <%= text_field_tag :search_title, params[:search_title ], class: "span2", placeholder: "Search Posts by Title" %>
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Post by Author" %>
    <button class="btn" type="submit"><i class="icon-search">Search</i></button>
  </div>
<% end %>

<%counter=1%>
<%if @posts_title.present?%>
	<% @posts_title.each do |post| %>
	  <div class="post">
	    <h4 class="post-title"><%=counter%>.<%= link_to post.title, post %></h4>
		<%if post.user%> 
	    <h6 class="post-author">Author:<%=  post.user.first_name%></h6>
	  <% else %>
	  	<h6>Guest</h6>
	  <% end %>
	  <%if current_user.present? && current_user.admin?%>
		<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure you want to remove post?' } %>
		<% end%>
	    <%counter+=1%>
	  </div>
	<% end %>
<% else%>
	<p>No post available.</p>
<% end %>


