<!-- edit.html.erb -->

<h1>Timetracking</h1>

<h2>Edit existing project</h2>

<h3>
  <%= @proj.name %>
</h3>


<%= form_for [@proj] do |f| %>
  <div>
    <%= f.label :name %>

     <ul>
      <% @proj.errors[:name].each do |err| %>
        <li><%= err %></li>
      <% end %>
    </ul>

      <%= f.text_field :name %>

  </div>

 <div>
    <%= f.label :description%>

     <ul>
      <% @proj.errors[:description].each do |err| %>
        <li><%= err %></li>
      <% end %>
    </ul>

    <%= f.text_area :description %>
  </div>
  

  <button type="submit">
   Submit changes
  </button>
<% end %>
