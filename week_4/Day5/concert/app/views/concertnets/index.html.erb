<% if user_signed_in?%>
		<header>
    		Hello, <%= current_user.email %>
    		<a href="/users/sign_out" data-method="delete">Log out</a>
  		</header>
<% end %>

<div class="main">
<h1>Concerts for <%=@date%></h1>
	
	<ul>
		<% @concerts.each do |concert| %>
		<a href='/concertnets/<%=concert.id %>/comments'><li>
			Artist:<%= concert.artist %><br>
			Date:<%= concert.date %><br>
			Avenue:<%= concert.venue %><br>
			Price/p:<%= concert.price%><br><br>
		</li></a>

		<% end %>
		<% if user_signed_in?%>
			<a href='/concertnets/new'>Create concert</a><br>
		<% end %>
	</ul>
</div>


<div class="month_concerts">
<h1>Concerts for this month:</h1>

	<ul>
		<% @concerts_month.each do |concert| %>
		<li>
			Artist:<%= concert.artist %><br>
			Date:<%= concert.date %><br>
			Avenue:<%= concert.venue %><br>
			Price/p:<%= concert.price%><br>

				<% if user_signed_in? %>
				<a href="/concertnets/<%= concert.id %>/comments">Add a comment</a><br>
			<% end %>
		</li>
		<% end %>
    </ul>
</div>

