<p id="notice"><%= notice %></p>

<%= form_tag '/users', :method => 'get',class: "navbar-form" do %>
  <div class="input-append">
    <%= text_field_tag :search_user, params[:search_user], class: "span2", placeholder: "Search User by name" %>
    <button class="btn" type="submit"><i class="icon-search">Search</i></button>
  </div>
 <% end %>

<h1>List of artists:</h1>
<%if @users.count>0%>
  <table>
    <thead>
      <tr>
        <th>Name</th>
         <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          
          <td><a href=' /users/<%=user.id %>'><%= user.first_name+' '+user.last_name%></a></td>
          <td><img src='<%=user.image_url(:user_image)%>'></td>
          <!-- <td><%= user.email%></td> -->
          <!-- Only for user authorization -->
          <% if current_user.present? and current_user.admin? %>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <% end %>
           <% if current_user.present? and current_user.admin? %>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure you want to remove user?' } %></td>
          <% end%>
          <!-- <td><%#= link_to "User's post", posts_path%></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
<p>There are no artists to show at this moment</p>
<% end %>

<% if current_user.present? && current_user.admin? %>

  <%= link_to 'New User',  new_user_path %> |
<% end %>
<%= link_to 'Back', events_path%>

