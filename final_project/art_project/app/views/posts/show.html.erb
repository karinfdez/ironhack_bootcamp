<p id="notice"><%= notice %></p>

	<p>
	  <strong>Title:</strong>
	  <%= @post.title %>
	</p>

	<p>
	  <strong>Image:</strong>
	  <img src='<%= @post.image_url(:thumb) %>'>
	</p>

	<p>
	  <strong>Author:</strong>
	  <%=@post.author %> 
	</p>

	<p>
	  <strong>Content:</strong>
	  <%= @post.content %>
	</p>
	
	<!-- Show on same page the comment added by the public. -->
	<h3>Comments:</h3>
	<% @post.comments.each do |comment| %>
   
  <strong>comment added:</strong><%= time_ago_in_words(comment.created_at) %><spam> ago</spam><br>
  
  <strong>Commenter:</strong><spam><%= comment.commenter %><spam><br>
   <strong>Text:</strong><%= comment.body %><br><br>
  <% end%>
<!--The form_for call here uses an array -->
	
	<h4>Add a comment:</h4>
		<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :Comment %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<!-- Only logged user(artist) can modify the posts. The admin can't modify it-->
<!-- Admin can delete posts only -->
<% if current_user.present? %>
	<%= link_to 'Edit', edit_user_post_path(@user,@post) %>|
<% end %>

<%= link_to 'Back', user_posts_path(@user) %>

