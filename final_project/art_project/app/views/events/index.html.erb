<p id="notice"><%= notice %></p>

<% if user_signed_in?%>
  <h4>Welcome <%= current_user.first_name%> <%=current_user.last_name%>!</h4>
  <%= link_to 'Logout', destroy_user_session_path, method: 'DELETE' %>
<% else %>
  <h4>Welcome!. Please log in</h4> 
  <%= link_to 'Log in',  user_session_path %>
<% end %><br>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Start date</th>
      <th>Ends date</th>
      <th>Image</th>
      <th>Description</th>
      <th>Organizer name</th>
      <th>Event type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.location %></td>
        <td><%= event.start_date %></td>
        <td><%= event.ends_date %></td>
        <!-- Show image resized -->
        <td><img src='<%= event.image_url(:thumb) %>'></td>
        <td><%= event.description %></td>
        <td><%= event.organizer_name %></td>
        <td><%= event.event_type %></td>
        <!-- Only for admin controller -->
        <%# if user_signed_in? %>
          <!-- <td><%#= link_to 'Show', event %></td>
          <td><%#= link_to 'Edit', edit_event_path(event) %></td>
          <td><%#= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %> -->
        <%#end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

