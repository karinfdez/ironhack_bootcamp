<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Author</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <!-- If there are posts created, show the posts -->
  <% if @posts.present? %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><img src='<%= post.image_url(:thumb) %>'></td>
        <td><%= post.author %></td>
        <td><%= post.content %></td>
        <%if current_user.present? && current_user.admin?%>
          <td><%= link_to 'Show', user_post_path(@user, post)%></td>
        <% end %>
        <%if current_user.present? && current_user.admin?%>
          <td><%= link_to 'Edit', edit_user_post_path(@user, post) %></td>
        <% end %>
        <%if current_user.present? && current_user.admin?%>
          <td><%= link_to 'Destroy', [@user, post], confirm: 'Are you sure?', method: :delete%></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_user_post_path(@user)%>

